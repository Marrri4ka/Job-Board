
@using JobBoard.Models;
<h1>Job Opportunities</h1>
<ul>

@if (Model.Count == 0)
{
  <p>There are no job opportunities now!</p>
}
@if(@Model.Count != 0)
{
  @foreach (Job job in Model)
{
  <li><a href = '/jobdetails/@job.GetId()'>@job.GetTitle()</a></li>
}
}


</ul>
<a href="/jobdetails/new">Add a new job opportunity.</a>
<form  action="/jobdetails/delete" method="post">
  <button type="submit" name="button">Clear All Jobs opportunities</button>
</form>
